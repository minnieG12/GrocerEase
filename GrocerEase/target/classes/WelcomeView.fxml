<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="main.WelcomeController" alignment="CENTER" spacing="20">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <!-- Main heading text -->
    <Text text="Welcome to GrocerEase!" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>

    <!-- Subheading text -->
    <Text text="Grocery shopping made easy." style="-fx-font-size: 14px; -fx-font-style: italic;"/>

    <!-- Name input -->
    <Label text="Name:"/>
    <TextField fx:id="nameField" promptText="Enter your name"/>

    <!-- Phone number input -->
    <Label text="Phone Number:"/>
    <TextField fx:id="phoneField" promptText="Enter your phone number"/>

    <!-- Balance input -->
    <Label text="Balance:"/>
    <TextField fx:id="balanceField" promptText="Enter your balance"/>

    <!-- Proceed button -->
    <Button text="Proceed" onAction="#onProceed"/>
</VBox>

